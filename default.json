{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "rangeStrategy": "bump",
  "additionalBranchPrefix": "{{#if (equals packageFileDir '/')}}{{else}}in {{packageFileDir}}/{{/if}}",
  "commitMessageSuffix": "{{#if (equals packageFileDir '/')}}{{else}}{{packageFileDir}}/{{/if}}",
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/.yarn/**",
    "**/wp-admin/**",
    "**/wp-includes/**"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "recreateWhen": "always",
    "schedule": [
      "after 8am on monday"
    ]
  }
}
