{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "rangeStrategy": "bump",
  "additionalBranchPrefix": "{{#if (equals packageFileDir '')}}{{else}}{{packageFileDir}}/{{/if}}",
  "commitMessageSuffix": "{{#if (equals packageFileDir '')}}{{else}}in {{packageFileDir}}/{{/if}}",
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/.yarn/**",
    "**/wp-admin/**",
    "**/wp-includes/**"
  ],
  "addLabels": ["dependencies", "{{categories}}"],
  "lockFileMaintenance": {
    "enabled": true,
    "recreateWhen": "always",
    "schedule": [
      "after 8am on monday"
    ]
  },
  "packageRules": [
    {
      "matchPackageNames": [
        "hashicorp/terraform"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "enabled": false
    },
    {
      "matchPackageNames": [
        "node"
      ],
      "matchFileNames": ["**/package.json"],
      "rangeStrategy": "widen"
    },
    {
      "matchPackageNames": [
        "php",
        "containerbase/php-prebuild"
      ],
      "matchDepTypes": ["require"],
      "matchFileNames": ["**/composer.json"],
      "rangeStrategy": "widen"
    }
  ]
}
