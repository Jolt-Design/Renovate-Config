{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "rangeStrategy": "bump",
  "additionalBranchPrefix": "{{{replace '^/$' '' '{{packageFileDir}}/'}}}",
  "commitMessageSuffix": "{{{replace '^in /$' '' 'in {{parentDir}}'}}}",
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/.yarn/**",
    "**/wp-admin/**",
    "**/wp-includes/**"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "recreateWhen": "always",
    "schedule": [
      "after 8am on monday"
    ]
  }
}
